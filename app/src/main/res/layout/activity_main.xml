<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_red_dark"
    tools:context="com.example.andres.OdontoTime.Vista.MainActivity">

    <ImageView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="237dp"
        android:layout_above="@+id/button_paciente"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="14dp"
        android:src="@mipmap/imagen_ot"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_medico"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:drawableRight="@drawable/ic_action_admin1"
        android:onClick="registro"
        android:text="MÃ©dico"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_paciente"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_medico"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:drawableRight="@drawable/ic_action_paciente"
        android:onClick="registro"
        android:text="Paciente"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_medico" />
</RelativeLayout>
