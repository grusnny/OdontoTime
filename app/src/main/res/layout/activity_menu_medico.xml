<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andres.OdontoTime.Vista.MenuMedico">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="258dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Menu Medico"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nueva_prescripcion"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/adm_usuario"
        android:layout_alignLeft="@+id/adm_usuario"
        android:layout_alignRight="@+id/adm_usuario"
        android:layout_alignStart="@+id/adm_usuario"
        android:layout_below="@+id/textView5"
        android:drawableRight="@drawable/ic_action_admin1"
        android:layout_marginTop="77dp"
        android:text="Nueva prescripcion" />

    <Button
        android:id="@+id/adm_medicamento"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adm_usuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_action_nuevo"
        android:text="Administrar tipos de citas" />

    <Button
        android:id="@+id/adm_usuario"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/adm_medicamento"
        android:layout_alignLeft="@+id/adm_medicamento"
        android:layout_alignRight="@+id/adm_medicamento"
        android:layout_alignStart="@+id/adm_medicamento"
        android:layout_below="@+id/nueva_prescripcion"
        android:drawableRight="@drawable/ic_action_persona"
        android:layout_marginTop="23dp"
        android:text="Administrar usuarios" />
</RelativeLayout>
